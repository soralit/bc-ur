{
  "compilerOptions": {
    "sourceMap": true,
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "paths": {
    "*": [
      "node_modules/*",
      "@types/*"
    ]
  },
  "references": [],
  "include": [
    "src/**/*"
  ],
}